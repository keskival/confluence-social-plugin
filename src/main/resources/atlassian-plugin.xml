<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
  </plugin-info>
  <macro key="latest-comment" name="Latest Comment"
    class="fi.neter.confluence.social.LatestCommentModule">
    <description>Shows the date of the latest comment to the target page.
    </description>
    <parameters>
      <parameter name="page" type="confluence_content">
      </parameter>
    </parameters>
  </macro>
  <macro name="ChildTopicPages" class="fi.neter.confluence.social.ChildTopicPages" key="child-topic-pages">
    <description key="child-topic-pages.description">The ChildTopicPages Plugin</description>
  </macro>
</atlassian-plugin>

<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
  </plugin-info>
  <resource type="i18n" name="i18n" location="fi.neter.confluence.social"/>
  <web-panel key="latest-comment" name="Latest Comment" class="fi.neter.confluence.social.LatestCommentModule" location="fi.neter.confluence.social/LatestComment">
    <description>Shows the date of the latest comment to the target page.</description>
  </web-panel>
  <web-panel name="ChildTopicPages" class="fi.neter.confluence.social.ChildTopicPages" i18n-name-key="child-topic-pages.name" key="child-topic-pages" location="fi.neter.confluence.social/ChildTopicPages" weight="1000">
    <description key="child-topic-pages.description">The ChildTopicPages Plugin</description>
  </web-panel>
</atlassian-plugin>

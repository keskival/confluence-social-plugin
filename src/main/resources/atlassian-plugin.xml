<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
  </plugin-info>
  <xhtml-macro name="ChildTopicPages" class="fi.neter.confluence.social.ChildTopicPagesModule"
    key="child-topic-pages" icon="/images/icon.jpeg">
    <description key="child-topic-pages.description">The ChildTopicPages Plugin</description>
    <parameters></parameters>
  </xhtml-macro>
  <web-resource key="my-macro-resources">
    <resource type="download" name="child-topic-pages.css" location="/css/child-topic-pages.css"/>
  </web-resource>
</atlassian-plugin>
